<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivangipandey.profilemanager.EditProfileActivity">

    <RelativeLayout
        android:gravity="center|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/blurry4"
            android:layout_centerHorizontal="true"
            />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:background="?selectableItemBackgroundBorderless"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:id="@+id/circle_icon"
            android:layout_marginTop="-50dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/study"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A"/>

        <LinearLayout
            android:layout_below="@id/circle_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="Profile Set For :"
            android:id="@+id/textView" />

            <EditText
                android:id="@+id/profileNameEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Profile Name" />

        </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout">

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Profile Active Between :"
            android:textSize="25sp"
            android:textColor="#18E9D6"
            android:background="@android:color/white"
            />

        <LinearLayout
            android:layout_below="@id/label"
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/start_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:gravity="bottom|center"
                    android:text="__________"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_horizontal"
                    android:text="Start Time"
                    android:textColor="#18E9D6" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/endtime_layout"
                android:background="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/endTime"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:text="__________"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="End Time"
                    android:gravity="center_horizontal"
                    android:textColor="#18E9D6"
                    />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/repeat_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Repeat : "
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/linearLayout1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_below="@id/repeat_textView"
            android:id="@+id/checkbox_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp">
            <CheckBox
                android:id="@+id/sunday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="S"
                android:button="@android:color/transparent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/circle_background"
                />
            <CheckBox
                android:id="@+id/monday"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="M"
                android:button="@android:color/transparent"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                />
            <CheckBox
                android:id="@+id/tuesday"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="T"
                android:button="@android:color/transparent"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                />

            <CheckBox
                android:id="@+id/wednesday"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_background"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="W" />

            <CheckBox
                android:id="@+id/thrusday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="T"
                android:button="@android:color/transparent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/circle_background"
                />
            <CheckBox
                android:id="@+id/friday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="F"
                android:layout_marginRight="10dp"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:background="@drawable/circle_background"
                />
            <CheckBox
                android:id="@+id/saturday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="S"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:background="@drawable/circle_background"
                />
        </LinearLayout>
    </RelativeLayout>

            <Button
                android:id="@+id/saveProfile"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:drawableRight="@drawable/ic_done_black_24dp"
                android:drawablePadding="-10dp"
                android:text="save"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignLeft="@+id/cancelProfile"
                android:layout_alignStart="@+id/cancelProfile"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp" />

            <Button
                android:layout_marginLeft="10dp"
                android:background="?selectableItemBackground"
                android:id="@+id/cancelProfile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:drawableLeft="@drawable/ic_keyboard_backspace_black_24dp"
               />

        <!--<com.nightonke.boommenu.BoomMenuButton-->
            <!--android:layout_below="@id/relativeLayout"-->
            <!--android:id="@+id/bmb"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:bmb_buttonEnum="ham"-->
            <!--app:bmb_piecePlaceEnum="piecePlace_ham_3"-->
            <!--app:bmb_buttonPlaceEnum="buttonPlace_ham_3"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_alignParentRight="true"/>-->
    </RelativeLayout>
</ScrollView>

