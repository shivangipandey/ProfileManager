<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="10dp"
    card_view:cardElevation="2dp"
    android:clickable="false"
    android:background="?selectableItemBackgroundBorderless"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/toprl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/list_item_imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/blurry4"
        android:scaleType="centerCrop"
        />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_below="@id/list_item_imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/circle_icon"
        android:layout_marginTop="-50dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/study"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"/>
    </RelativeLayout>
    <RelativeLayout
    android:id="@+id/rl"
    android:background="@android:color/white"
    android:layout_width="match_parent"
        android:layout_marginTop="-3dp"
    android:layout_height="100dp">

         <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="5dp"
         android:id="@+id/linearLayout3"
         >

            <TextView
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_weight="1.39"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:text="06:30"/>
        <TextView
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5sp"
            android:text="-"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />
        <TextView
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_weight="1.39"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="08:30"/>

    </LinearLayout>

    <TextView
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="office"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout3"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">

        <CheckBox
            android:id="@+id/sunday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_background"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="S"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/monday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_background"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="M"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/tuesday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_background"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="T"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/wednesday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_background"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="W"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/thrusday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_background"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="T"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/friday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_background"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="F"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/saturday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_background"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="S"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mode1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileName"
        android:src="@drawable/ic_volume_up_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/mode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileName"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_access_alarm_black_24dp"
        android:layout_toRightOf="@id/mode1"
        android:layout_marginTop="5dp"
        />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:clickable="true"
        android:focusable="false" />

</RelativeLayout>

</LinearLayout>
</android.support.v7.widget.CardView>